<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybtis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.stackoverflow.blog.dao.RoleDao">

    <resultMap id="roleMap" type="rolePO">
        <id property="id" column="id"></id>
        <result property="name" column="name"></result>
        <result property="code" column="code"></result>
    </resultMap>

    <select id="selectByPage" resultMap="roleMap" resultType="rolePO">
        select * from role
        <where>
            <if test="searchMap != null">
                <if test="searchMap.name != null">
                    name = #{searchMap.name}
                </if>
                <if test="searchMap.code != null">
                    and code = #{searchMap.code}
                </if>
            </if>
        </where>
        order by lower(code) limit #{start},#{limit}
    </select>

    <select id="selectByCondition" resultMap="roleMap" resultType="rolePO">
        select * from role
        <where>
            <if test="name != null">
                name = #{name}
            </if>
            <if test="code != null">
                and code = #{code}
            </if>
        </where>
    </select>

    <select id="selectById" resultMap="roleMap" resultType="rolePO">
        select * from role where id = #{id}
    </select>

    <insert id="insert" parameterType="rolePO" useGeneratedKeys="true" keyProperty="id">
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
            select uuid()
        </selectKey>
        insert into role (id,name,code)
        values (#{id},#{name},#{code})
    </insert>

    <insert id="batchInsert" parameterType="list">
        insert into role (id,name,code)
        values
        <foreach collection="list" item="item" separator=",">
            ((select uuid()),#{item.name},#{item.code})
        </foreach>
    </insert>

    <delete id="deleteById" parameterType="string">
        delete from role where id = #{id}
    </delete>

    <delete id="batchDeleteById" parameterType="list">
        delete from role where id in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <update id="update" parameterType="rolePO">
        update role
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="batchUpdate" parameterType="list">
        <foreach collection="list" item="item" open="" close="" separator=";">
            update role
            <set>
                <if test="item.name != null">
                    name = #{item.name},
                </if>
                <if test="item.code != null">
                    code = #{item.code},
                </if>
            </set>
            where id = #{item.id}
        </foreach>
    </update>

</mapper>